#include <dt-bindings/zmk/matrix_transform.h>

/ {

    /*  
        Here we select which transform and scan list we want to use so if we upadte 
        the board later with a different pin out we can choose a different set
    */
    chosen {
        zmk,kscan = &default_kscan;
        zmk,matrix_transform = &default_transform;
    };

default_transform: matrix_transform{
        compatible = "zmk,matrix_transform";
        rows = <4>;
        columns = <7>;
                                                                    /* Thumb clusters */
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,5) RC(0,6)                                   RC(0,6) RC(0,5) RC(0,3) RC(0,2) RC(0,1) RC(0,0)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,5) RC(1,6)                                   RC(1,6) RC(1,5) RC(1,3) RC(1,2) RC(1,1) RC(1,0)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,5) RC(2,6)                                   RC(2,6) RC(2,5) RC(2,3) RC(2,2) RC(2,1) RC(2,0)
            RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,5) RC(3,6)                                   RC(3,6) RC(3,5) RC(3,3) RC(3,2) RC(3,1) RC(3,0)
                                                            RC(1,4) RC(2,4)   RC(2,4) RC(1,4)                                          
                                                                    RC(3,4)   RC(3,4)                                           
        >;
    };

    default_kscan: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "deafult_kscan";
        diode-direction = "col2row";

        col-gpios = <&pro_micro 21 GPIO_ACTIVE_HIGH>,
                    <&pro_micro 20 GPIO_ACTIVE_HIGH>,
                    <&pro_micro 19 GPIO_ACTIVE_HIGH>,
                    <&pro_micro 18 GPIO_ACTIVE_HIGH>,
                    <&pro_micro 16 GPIO_ACTIVE_HIGH>,
                    <&pro_micro 15 GPIO_ACTIVE_HIGH>,
                    <&pro_micro 14 GPIO_ACTIVE_HIGH>;


    };
};